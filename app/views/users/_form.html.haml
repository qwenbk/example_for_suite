= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .container
    %h3 Создание нового пользователя
    %hr/
    .row
      .col-lg-6
        .form-group
          = f.label :email
          .input-group
            %span.input-group-addon
              %span.glyphicon.glyphicon-envelope
            = f.text_field :email, class: 'form-control'
        .form-group
          = f.label :password
          .input-group
            %span.input-group-addon
              %span.glyphicon.glyphicon-lock
            = f.password_field :password, class: 'form-control'
        .form-group
          = f.label :password_confirmation
          .input-group
            %span.input-group-addon
              %span.glyphicon.glyphicon-resize-vertical
            = f.password_field :password_confirmation, class: 'form-control'
        .form-group
          = f.label :first_name
          .input-group
            %span.input-group-addon
              %span.glyphicon.glyphicon-user
            = f.text_field :first_name, class: 'form-control'
        .form-group
          = f.label :second_name
          .input-group
            %span.input-group-addon
              %span.glyphicon.glyphicon-user
            = f.text_field :second_name, class: 'form-control'
        .form-group
          = f.label :last_name
          .input-group
            %span.input-group-addon
              %span.glyphicon.glyphicon-user
            = f.text_field :last_name, class: 'form-control'

        %h3 Роли пользователя
        %hr/
        = f.fields_for :role_users do |role_users|
          = render 'role_user_fields', f: role_users
        .links
          = link_to_add_association f, :role_users, class: 'btn btn-success' do
            = fa_icon :plus
            Добавить Роль
    .actions
      = submit_tag "Создать",  class: "btn btn-primary"

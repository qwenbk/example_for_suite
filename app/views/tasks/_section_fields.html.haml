.nested-fields
  .row
    .col-md-12
      .panel.panel-success
        .panel-heading
          Тип раздела
          %span.toright
            = link_to_remove_association f, class: 'btn btn-danger fa-lg' do
              = fa_icon :times
          .clearfix
        .panel-body
          .row
            .col-lg-12
              .form-group
                = f.label :kind
                .input-group
                  %span.input-group-addon
                    = fa_icon "newspaper-o"
                  = f.text_field :kind, class: 'form-control'
          .row
            .col-lg-12
              .form-group
                = f.label :comment
                .input-group
                  %span.input-group-addon
                    = fa_icon :commenting
                  = f.text_field :comment, class: 'form-control'
